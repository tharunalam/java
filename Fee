# java FEE COLLECTIOJN

import java.util.Scanner;
public class Fee
{
    public static void main(String[] args)
    {
        Scanner input=new Scanner(System.in);
        System.out.println("Enter the student type");
        String str=input.nextLine();
        switch(str)
        {
            case "MSDS":
                System.out.println("Enter tuition fee");
                float t=input.nextFloat();
                System.out.println("ENTER BUS FEE");
                float b=input.nextFloat();
                float a=t+b;
                System.out.printf("The fees to be paid by the student is Rs.%.2f",a);
                break;
                
                case "MSH": 
                    System.out.println("Enter tuition fee");
                    float c=input.nextFloat();
                    System.out.println("Enter hostel fee");
                    float d=input.nextFloat();
                    float e=c+d;
                    System.out.printf("The fees to be paid by the student is Rs.%.2f",e);
                    break;
                    case "MGSDS":
                       System.out.println("Enter tuition fee");
                       float v=input.nextFloat();
                       float v1=v/2;
                       float v2=v+v1;
                       System.out.println("Enter bus fee");
                       float b1=input.nextFloat();
                       float a1=v2+b1;
                        System.out.printf("The fees to be paid by the studeent is Rs.%.2f",a1);
                        break;
                        
                        case"MGSH":
                            System.out.println("Enter tuition fee");
                            float t4=input.nextFloat();
                             float t5=t4/2;
                             float t6=t4+t5;
                             System.out.println("Enter hostel fee");
                             float t7=input.nextFloat();
                              float t8=t6+t7;
                              System.out.printf("The fees to be paid by the student is RS.%.2f",t8);
        }
    }    
}                              
                      
                    
                    
                
                
